<html>
   <head>
      <title>Student Details</title>
      <link rel="stylesheet" href="/style.css" />
   </head>
   <body>
      <main>
         <h1>Student Details</h1>
         <form action="/students/<%= student.id %>" method="POST">
               <label for="name">Name:</label>
               <input type="text" id="name" name="name" value="<%= student.name %>" required><br>
               <label for="school">School:</label>
               <input type="text" id="school" name="school" value="<%= student.school %>" required><br>
               <button type="submit">Update</button>
         </form>
         <div style="position: fixed; bottom: 20px; right: 20px;">
            <button onclick="window.location.href='http://localhost:3000/students/'">Back</button>
            <button onclick="window.location.href='http://localhost:3000/'">Home</button>
      </div>
      </main>
   </body>
</html>
